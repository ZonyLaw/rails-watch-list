<div class=banner-index>
  <h1>This is the list</h1>
</div>

<h2> <%=@list.name%> </h2>
<hr>
<div class="list-index-content">
  <%@list.movies.each do |movie|%>
    <div class=list-card-index>
        <%= image_tag 'list-image', class: 'image-list-cover',  alt: "image cover for list" %>
        <p>  <%=movie.title%> </p>
    </div>
  <%end%>
</div>

<div class=item-bottom>
  <%=link_to "Back to list", root_path %> |
  <%=link_to "Bookmark movie", new_list_bookmark_path(@list) %>
</div>
